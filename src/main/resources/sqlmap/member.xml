	<select id="memberSelect" parameterType="Integer" resultType="memberVO">
	<![CDATA[
		SELECT A.MEMBER_NO
		     , A.USER_NAME
		     , A.USER_PWD
		     , A.MONEY
		     , A.IP
		     , A.INPUT_DT
		     , A.LAST_DT
		  FROM HFC.HFC_MEMBER A
		 WHERE A.MEMBER_NO = ${member_no}
	]]>
	</select>
	
	<select id="loginSelect" parameterType="String" resultType="memberVO">
	<![CDATA[
		SELECT TOP 1
		       A.MEMBER_NO
		     , A.USER_PWD
		  FROM HFC.HFC_MEMBER A
		 WHERE A.USER_EMAIL = ${user_email}
	]]>
	</select>
